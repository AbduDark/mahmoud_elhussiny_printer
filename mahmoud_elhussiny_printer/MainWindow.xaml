<Window x:Class="mahmoud_elhussiny_printer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="برنامج محمود الحسيني للطباعة التسلسلية"
        Height="750" Width="600"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <StackPanel>
                <TextBlock Text="برنامج محمود الحسيني" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="للطباعة التسلسلية - XPrinter XP-370B" 
                           FontSize="14" 
                           Foreground="#ECF0F1" 
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                
                <!-- الطابعة والأرقام -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="⚙️ الإعدادات الأساسية" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="اختيار الطابعة:" FontWeight="SemiBold" Foreground="#34495E"/>
                        <ComboBox x:Name="cmbPrinters" Height="35" Margin="0,5,0,15" FontSize="13"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="من رقم:" FontWeight="SemiBold" Foreground="#34495E"/>
                                <TextBox x:Name="txtFrom" Height="35" Margin="0,5,0,0" FontSize="13" VerticalContentAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="إلى رقم:" FontWeight="SemiBold" Foreground="#34495E"/>
                                <TextBox x:Name="txtTo" Height="35" Margin="0,5,0,0" FontSize="13" VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- إعدادات الورقة -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="📄 إعدادات الورقة" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="عرض الورقة (بوصة):" FontWeight="SemiBold" Foreground="#34495E"/>
                                <TextBox x:Name="txtWidth" Text="1.57" Height="35" Margin="0,5,0,0" FontSize="13" VerticalContentAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="طول الورقة (بوصة):" FontWeight="SemiBold" Foreground="#34495E"/>
                                <TextBox x:Name="txtHeight" Text="0.98" Height="35" Margin="0,5,0,0" FontSize="13" VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                        
                        <TextBlock Text="حجم النص (1 إلى 4):" FontWeight="SemiBold" Foreground="#34495E" Margin="0,15,0,0"/>
                        <TextBox x:Name="txtFontSize" Text="2" Height="35" Margin="0,5,0,0" FontSize="13" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- إعدادات الباركود -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="📊 إعدادات الباركود" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>
                        
                        <CheckBox x:Name="chkBarcode" Content="تفعيل طباعة الباركود" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="ارتفاع الباركود:" FontWeight="SemiBold" Foreground="#34495E"/>
                        <TextBox x:Name="txtBarcodeHeight" Text="60" Height="35" Margin="0,5,0,0" FontSize="13" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- إعدادات المواضع -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="📍 إعدادات المواضع المتقدمة" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="المواضع الأفقية (X):" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="موضع النص الأيسر:" FontWeight="SemiBold" Foreground="#7F8C8D" FontSize="12"/>
                                <TextBox x:Name="txtLeftX" Text="20" Height="35" Margin="0,5,0,0" FontSize="13" VerticalContentAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="موضع النص الأيمن:" FontWeight="SemiBold" Foreground="#7F8C8D" FontSize="12"/>
                                <TextBox x:Name="txtRightX" Text="200" Height="35" Margin="0,5,0,0" FontSize="13" VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="المواضع العمودية (Y) - النصوص:" FontWeight="SemiBold" Foreground="#34495E" Margin="0,15,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="موضع الصف الأول:" FontWeight="SemiBold" Foreground="#7F8C8D" FontSize="12"/>
                                <TextBox x:Name="txtTopY" Text="10" Height="35" Margin="0,5,0,0" FontSize="13" VerticalContentAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="موضع الصف الثاني:" FontWeight="SemiBold" Foreground="#7F8C8D" FontSize="12"/>
                                <TextBox x:Name="txtBottomY" Text="140" Height="35" Margin="0,5,0,0" FontSize="13" VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="المواضع العمودية (Y) - الباركود:" FontWeight="SemiBold" Foreground="#34495E" Margin="0,15,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="باركود الصف الأول:" FontWeight="SemiBold" Foreground="#7F8C8D" FontSize="12"/>
                                <TextBox x:Name="txtBarcodeTopY" Text="30" Height="35" Margin="0,5,0,0" FontSize="13" VerticalContentAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="باركود الصف الثاني:" FontWeight="SemiBold" Foreground="#7F8C8D" FontSize="12"/>
                                <TextBox x:Name="txtBarcodeBottomY" Text="160" Height="35" Margin="0,5,0,0" FontSize="13" VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- زر الطباعة -->
                <Button x:Name="btnPrint" Content="🖨️ بدء الطباعة" Height="50"
                        Background="#27AE60" Foreground="White" FontWeight="Bold" FontSize="16"
                        Click="btnPrint_Click" Cursor="Hand" Margin="0,5,0,20">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10" ShadowDepth="3"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#27AE60"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8" 
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#1E8449"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
